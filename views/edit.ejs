<%- include("partials/header") %>
<br>
<div class="container">
    <form action="/bugs/<%= bug._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Title*</label>
            <input type="text" class="form-control" name="bug[title]" value="<%= bug.title %>">
        </div>
        <div class="form-group">
            <label>Project*</label>
            <input type="text" class="form-control" name="bug[project]" value="<%= bug.project %>">
        </div>
        <div class="form-group">
            <label>Area*</label>
            <input type="text" class="form-control" name="bug[area]" value="<%= bug.area %>">
        </div>
        <div class="form-group">
            <label>Priority*</label>
            <select class="form-control" name="bug[priority]" value="<%= bug.priority %>">
                <option><%= bug.priority %></option>
                <option>Low</option>
                <option>Medium</option>
                <option>High</option>
            </select>
        </div>
        <div class="form-group">
            <label class="d-block">Comments</label>
            <textarea name="bug[comment]" class="form-control" rows="3" value="<%= bug.comment %>"><%= bug.comment %></textarea>
        </div>
        <button type="submit" class="btn btn-success btn-group">Submit</button>
        <a class="btn btn-warning btn-group" href="/bugs">Go Back</a>
    </form>
</div>
<br>
<%- include("partials/footer") %>